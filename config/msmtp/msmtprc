# default values for all accounts
defaults
tls            on
tls_starttls   on
auth           on
logfile        /drawer/log/msmtp.log
tls_trust_file   /usr/share/ca-certificates/mozilla/Thawte_Premium_Server_CA.crt

# gmail account
account      	gmail
host         	smtp.gmail.com
port         	587
from         	arnaud.gaboury@gmail.com
