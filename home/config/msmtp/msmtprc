# configuration file for msmtp
# ~/.config/msmtp/msmtprc @ hortensia
# Last modified 2014-07-09


# Set default values for all following accounts.
defaults

# gmail account
account      	gmail
host         	smtp.gmail.com
port         	587
user         	arnaud.gaboury 
from         	arnaud.gaboury@gmail.com

# change default value to something else than localhost
domain		gmail.com
auth            on

passwordeval    gpg --no-tty -d ~/.config/gnupg/gmail_pwd.asc
tls             on
tls_trust_file  /etc/ssl/certs/ca-certificates.crt


logfile        /drawer/log/msmtp.log


#set default account
account default : gmail
